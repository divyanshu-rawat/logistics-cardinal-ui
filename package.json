{
  "name": "logistics-cardinal-ui",
  "version": "1.1.0",
  "description": "Logistics Cardinal UI",
  "author": "logistics",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/foodora/logistics-cardinal-ui.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "scripts": {
    "build": "rollup -c",
    "start": "rollup -c -w",
    "predeploy": "cross-env NODE_ENV=production && yarn run build",
    "deploy:storybook": "yarn run build-storybook && node ./internals/scripts/deployDocs.js",
    "deploy:lib": "node ./internals/scripts/deployLib.js",
    "deploy": "yarn run deploy:lib && yarn run deploy:storybook",
    "storybook": "start-storybook -p 9009",
    "build-storybook": "build-storybook -c .storybook -o docs",
    "test": "cross-env NODE_ENV=test jest --coverage --json --outputFile=.jest-test-results.json",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll --json --outputFile=.jest-test-results.json",
    "codacy": "cat ./coverage/lcov.info | codacy-coverage",
    "travis-deploy-once": "travis-deploy-once --pro",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote --trailing-comma all --arrow-parens always",
      "eslint src --fix",
      "stylelint",
      "git add",
      "jest --bail --findRelatedTests"
    ]
  },
  "dependencies": {
    "moment": "^2.22.1",
    "moment-timezone": "^0.5.16",
    "normalize.css": "^8.0.0",
    "polished": "^1.9.2",
    "react": "16.6.0",
    "react-dom": "16.6.0",
    "react-md-spinner": "^0.2.5",
    "react-modal": "^3.5.1",
    "react-responsive": "^4.1.0",
    "react-reveal": "^1.2.2",
    "react-select": "1.2.0",
    "react-select-plus": "1.1.0",
    "react-switch": "^3.0.2",
    "react-text-mask": "5.4.3",
    "recharts": "1.0.0-beta.10",
    "sanitize.css": "^5.0.0",
    "shortid": "^2.2.8",
    "styled-components": "2.2.3",
    "styled-css-grid": "^1.1.0",
    "text-mask-addons": "^3.7.2"
  },
  "peerDependencies": {
    "moment": "^2.22.1",
    "moment-timezone": "^0.5.16",
    "prop-types": "^15.5.4",
    "react": "16.6.0",
    "react-dom": "16.6.0",
    "react-reveal": "^1.2.2",
    "react-select-plus": "1.1.0",
    "sanitize.css": "^5.0.0",
    "styled-components": "2.2.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.story.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/themes/*",
      "!src/utils/*",
      "!src/tests/*",
      "!src/*/RbGenerated*/*.{js,jsx}",
      "!src/index.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "setupFiles": [
      "<rootDir>/src/tests/requestAnimationFrame.js",
      "<rootDir>/src/tests/moment.js",
      "<rootDir>/src/tests/enzymeAdapter.js",
      "<rootDir>/src/tests/shortid.js"
    ],
    "moduleNameMapper": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "identity-obj-proxy"
    },
    "testRegex": "tests/.*\\.test\\.js$"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.3",
    "@storybook/addon-backgrounds": "^3.4.3",
    "@storybook/addon-centered": "^3.4.3",
    "@storybook/addon-info": "^3.4.3",
    "@storybook/addon-jest": "^3.4.3",
    "@storybook/addon-knobs": "^3.4.4",
    "@storybook/addon-links": "^3.4.3",
    "@storybook/addon-options": "^3.4.6",
    "@storybook/addon-viewport": "^3.4.8",
    "@storybook/addons": "^3.4.3",
    "@storybook/react": "^3.4.3",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-inline-react-svg": "^0.5.4",
    "babel-plugin-styled-components": "^1.5.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "chalk": "^2.4.1",
    "codacy-coverage": "^3.0.0",
    "cross-env": "^5.1.4",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "enzyme-to-json": "^3.3.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-import-resolver-webpack": "0.8.3",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "6.0.2",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "gh-pages": "^1.1.0",
    "husky": "^1.0.0-rc.6",
    "identity-obj-proxy": "^3.0.0",
    "intl": "^1.2.5",
    "lint-staged": "^7.1.0",
    "raf": "^3.4.0",
    "react-scripts": "^1.1.1",
    "react-svg-loader": "^2.1.0",
    "rollup": "0.54.0",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^8.2.1",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.0.2",
    "rollup-plugin-peer-deps-external": "2.0.0",
    "rollup-plugin-postcss": "^1.1.0",
    "rollup-plugin-react-svg": "^2.1.0",
    "rollup-plugin-url": "^1.3.0",
    "semantic-release": "^15.5.2",
    "stylelint": "^9.6.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.0",
    "travis-deploy-once": "^5.0.0"
  },
  "files": [
    "dist"
  ]
}
